{
  "custom/launcher": {
    "format": "ÔÄï",
    "on-click": "rofi -show drun -replace",
    "tooltip": false
  },
  "sway/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{icon}",
    "format-icons": {
      // "1": "ÔÑ†",
      // "1": "‚ë†",
      "1": "Ôºë",
      // "2": "Ôâ©",
      // "2": "‚ë°",
      "2": "Ôºí",
      // "3": "ÔÅª",
      // "3": "‚ë¢",
      "3": "Ôºì",
      // "4": "ÔÑ°",
      // "4": "‚ë£",
      "4": "Ôºî",
      // "5": "ÔÖ™",
      // "5": "‚ë§",
      "5": "Ôºï",
      // "6": "ÔÇÜ",
      // "6": "‚ë•",
      "6": "Ôºñ",
      // "7": "ÔÇõ",
      // "7": "‚ë¶",
      "7": "Ôºó",
      // "8": "ÔáÄ",
      // "8": "‚ëß",
      "8": "Ôºò",
      // "9": "ÔÜò",
      // "9": "‚ë®",
      "9": "Ôºô",
      // "10": "ÔÑë"
      // "10": "‚ë©"
      "10": "ÔºëÔºê"
    },
    "on-click": ""
  },
  "sway/window": {
    "rewrite": {
      "(.*) - Brave": "$1",
      "(.*) - Chromium": "$1",
      "(.*) - Brave Search": "$1",
      "(.*) - Outlook": "$1",
      "(.*) Microsoft Teams": "$1"
    },
    "separate-outputs": true,
    "format": "<span color=\"#24273a\" style=\"italic\">{}</span>"
  },
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
  },
  "group/player": {
    "orientation": "horizontal",
    "modules": [
      "custom/player-prev",
      "custom/player-play",
      "custom/player-next"
    ]
  },
  "custom/player-prev": {
    "format": "ÔÅà",
    "tooltip": false,
    "on-click": "playerctl previous"
  },
  "custom/player-play": {
    "exec": "WAYBAR_RUN_ONCE=0 ~/.config/waybar/scripts/player_status.sh",
    "return-type": "json",
    "interval": 0,
    "on-click": "playerctl play-pause",
    "signal": 8,
    "format": "{text}",
    "tooltip": true
  },
  "custom/player-next": {
    "format": "ÔÅë",
    "tooltip": false,
    "on-click": "playerctl next"
  },
  "clock": {
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
      "mode": "month",
      "mode-mon-col": 3,
      "weeks-pos": "right",
      "on-scroll": 1,
      "on-click-right": "mode",
      "format": {
        "months": "<span color='#bb9af7'><b>{}</b></span>",
        "days": "<span color='#7aa2f7'><b>{}</b></span>",
        "weeks": "<span color='#9ece6a'><b>W{}</b></span>",
        "weekdays": "<span color='#e0af68'><b>{}</b></span>",
        "today": "<span background='#2ac3de' color='#1a1b26'><b><u>{}</u></b></span>"
      }
    },
    "actions": {
      "on-click-right": "mode",
      "on-click-forward": "tz_up",
      "on-click-backward": "tz_down",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    },
    "format": "{:%a %d %b | %H:%M %p}",
    "format-alt": "ÔÑ≥  {:%Y-%m-%d ÔÄó %H:%M:%S}",
    "interval": 1
  },
  "bluetooth": {
    "format-connected": "üîó {num_connections}",
    "tooltip": true,
    "on-click": "kitty -e bluetui"
  },
  "backlight": {
    "format": "{icon} {percent: >3}%",
    "format-icons": [
      "ÔÑë",
      "Óèì",
      "Óèë",
      "Óèè",
      "Óèé",
      "Óèç",
      "Óèä",
      "Óèà",
      "Óéõ"
    ],
    "on-scroll-down": "brightnessctl -c backlight set 5%-",
    "on-scroll-up": "brightnessctl -c backlight set +5%",
    "on-click": ""
  },
  "pulseaudio": {
    "format": "{icon} {volume: >3}%",
    "format-bluetooth": "{icon} {volume: >3}%",
    "format-muted": "ÔÄ¶ muted",
    "format-icons": {
      "headphones": "ÔÄ•",
      "handsfree": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": [
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "on-click": "pavucontrol",
    "on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +5%",
    "on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -5%"
  },
  "custom/keyboard-layout": {
    "exec": "swaymsg -t get_inputs | grep -m1 'xkb_active_layout_name' | cut -d '\"' -f4",
    "interval": 1,
    "format": "ÔÑú  {}",
    "signal": 1,
    "tooltip": false,
    "on-click": "~/.config/waybar/scripts/keyhint.sh"
  },
  "group/hardware": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-memory",
      "transition-left-to-right": false
    },
    "modules": [
      "custom/system",
      "disk",
      "cpu",
      "memory"
    ]
  },
  "custom/system": {
    "format": "Óë≥",
    "tooltip": false
  },
  "disk": {
    "format": "ÔÇ† {percentage_used}% ",
    "path": "/"
  },
  "cpu": {
    "format": "Ôãõ {usage: >3}%",
    "on-click": "kitty -e htop"
  },
  "memory": {
    "format": "Ôî∏ {: >3}%",
    "on-click": "kitty -e htop"
  },
  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity: >3}%",
    "format-charging": "Ôóß  {capacity}%",
    "format-plugged": "Ôá¶  {capacity}%",
    "format-alt": "{icon}  {time}",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ]
  },
  "network": {
    "format": "‚ö†  Disabled",
    "format-wifi": "Ôá´  {essid}",
    "format-ethernet": "ÔÉÅ  Wired",
    "format-disconnected": "‚ö†  Disconnected",
    "tooltip-format": "Ôûñ {ifname} via {gwaddri}",
    "tooltip-format-wifi": "Ôá´   {essid} ({signalStrength}%)",
    "tooltip-format-ethernet": "ÔÉÅ  {ifname} ({ipaddr}/{cidr})",
    "tooltip-format-disconnected": "‚ö†  Disconnected",
    "on-click": "kitty -e nmtui"
  },
  "custom/power": {
    "format": "‚èª",
    "on-click": "wlogout -p layer-shell",
    "tooltip": false
  }
  
}